#!/usr/bin/env bash

# this works in all shells
# >/dev/null 2>&1

# this only works in new shells
# &> /dev/null

# this only works in fish
# > /dev/null ^ /dev/null

# we are in bash, so use bash's syntax

# help
if is-help "$@"; then
	cat <<-EOF >/dev/stderr
		ABOUT:
		    Send both stderr and stout to dev null.
	EOF
	exit 22 # Invalid argument
fi

("$@") &>/dev/null
