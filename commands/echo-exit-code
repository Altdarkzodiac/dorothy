#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function echo-exit-code() (
	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Given a command as arguments, execute it, output the exit code.

			USAGE:
			echo-exit-code [--] ...<command>

			EXAMPLES:
			echo-exit-code -- exit 0    # outputs: 0    exit code: 0
			echo-exit-code -- exit 1    # outputs: 1    exit code: 0
			echo-exit-code -- exit 2    # outputs: 2    exit code: 0
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # Invalid argument
	}

	# process
	local item cmd=()
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--')
			cmd+=("$@")
			shift "$#"
			break
			;;
		*) cmd+=("$item") ;;
		esac
	done

	# check
	if test "${#cmd[@]}" -eq 0; then
		help "No <command> was provided."
	fi

	# =====================================
	# Action

	local ec
	ec=0 && ("${cmd[@]}") || ec="$?"
	echo "$ec"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo-exit-code "$@"
fi
