#!/usr/bin/env bash

# get the array count, and fail if there were any empty values

function get-array-count() (
	local arg
	for arg in "$@"; do
		if test -z "$arg"; then
			echo '-1'
			return 1
		fi
	done

	echo "$#"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	get-array-count "$@"
fi
