#!/usr/bin/env bash

# =====================================
# Arguments

# help
function help() {
	cat <<-EOF >/dev/stderr
		ABOUT:
		Run a bash script with [-x] applied, which enables line by line tracelogs.

		USAGE:
		debug-bash -- <command...>
	EOF
	if test "$#" -ne 0; then
		echo-style $'\n' --error="ERROR:" $'\n' --red="$(echo-lines -- "$@")" >/dev/stderr
	fi
	return 22 # Invalid argument
}

# process
cmd=()
while test "$#" -ne 0; do
	item="$1"
	shift
	case "$item" in
	'help' | '--help' | '-h') help ;;
	'--')
		cmd+=("$@")
		shift "$#"
		break
		;;
	*) cmd+=("$item") ;;
	esac
done

# check
if test "${#cmd[@]}" -eq 0; then
	help "No command was provided"
fi

# =====================================
# Action

bash -x "$(get-command "${cmd[0]}")" "${cmd[@]:1}"
