#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# =====================================
# Arguments

# help
function help() {
	cat <<-EOF >/dev/stderr
		ABOUT:
		Outputs your network gateway.

		USAGE:
		what-is-my-gateway
	EOF
	if test "$#" -ne 0; then
		echo-style $'\n' --error="ERROR:" $'\n' --red="$(echo-lines -- "$@")" >/dev/stderr
	fi
	return 22 # Invalid argument
}

# process
while test "$#" -ne 0; do
	item="$1"
	shift
	case "$item" in
	'help' | '--help' | '-h') help ;;
	'--'*) help "An unrecognised flag was provided: $item" ;;
	*) help "An unrecognised argument was provided: $item" ;;
	esac
done

# =====================================
# Dependencies

source "$DOROTHY/sources/ripgrep.bash"
env QUIET=yes setup-util-sd
env QUIET=yes setup-util-netstat

# =====================================
# Act

if command-exists ip; then
	# shellcheck disable=SC2016
	ip route show dev eth0 | rg -o 'via (.+?) ' --replace '$1' | echo-first
elif command-exists netstat; then
	# shellcheck disable=SC2016
	netstat -nr | rg ' UG.+?(en0|eth0)' | sd '(0.0.0.0|default) +(.+?) .+' '$2' | echo-first
else
	echo-style --error='install [ip] or [netstat] and try again' >/dev/stderr
	exit 19 # ENODEV 19 Operation not supported by device
fi
