#!/usr/bin/env bash

# https://github.com/jmacdonald/amp
# https://github.com/jmacdonald/amp/releases
# vim alternative

function setup-util-amp() (
	source "$DOROTHY/sources/strict.bash"

	setup-util "$@" --cli='amp' \
		BREW='amp' \
		CARGO='amp' \
		setup-util
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup-util-amp "$@"
fi
