#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# options
remote="$(
	ask --required \
		--question='What remote to configure?' \
		--default="${1:-"origin"}"
)"
protocol="$(git-protocol-ask "${2-}")"

# apply the change
ourl="$(git-remote-url "$remote")"
purl="$(git-protocol-format "$ourl" "$protocol")"
git-remote-apply "$remote" "$purl"
