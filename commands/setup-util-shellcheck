#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# https://github.com/koalaman/shellcheck#installing

function setup-util-shellcheck() (
	setup-util "$@" CLI='shellcheck' \
		APT='shellcheck' \
		BREW='shellcheck' \
		CABAL='ShellCheck' \
		CHOCO='shellcheck' \
		CONDA_CHANNEL='conda-forge' \
		CONDA='shellcheck' \
		DNF='ShellCheck' \
		EMERGE='shellcheck' \
		EOPKG='shellcheck' \
		NIX='nixpkgs.shellcheck' \
		PACMAN='shellcheck' \
		PKG_ADD='shellcheck' \
		PKG='hs-ShellCheck' \
		PORT='shellcheck' \
		SCOOP='shellcheck' \
		SNAP_CHANNEL='edge' \
		SNAP='shellcheck' \
		STACK='ShellCheck' \
		YUM='ShellCheck' \
		ZYPPER='ShellCheck' \
		-- ... apt

	# ^ apt is an outdated version, so prefer anything else, say snap, over apt
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup-util-shellcheck "$@"
fi
