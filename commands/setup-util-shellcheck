	APT='shellcheck' \
	BREW='shellcheck' \
	CABAL='ShellCheck' \
	CHOCO='shellcheck' \
	CONDA_CHANNEL='conda-forge' \
	CONDA='shellcheck' \
	DNF='ShellCheck' \
	EMERGE='shellcheck' \
	EOPKG='shellcheck' \
	NIX='nixpkgs.shellcheck' \
	PACMAN='shellcheck' \
	PKG_ADD='shellcheck' \
	PKG='hs-ShellCheck' \
	PORT='shellcheck' \
	SCOOP='shellcheck' \
	SNAP_CHANNEL='edge' \
	SNAP='shellcheck' \
	STACK='ShellCheck' \
	YUM='ShellCheck' \
	ZYPPER='ShellCheck' \
	setup-util -- ... apt

# ^ apt is an outdated version, so prefer anything else, say snap, over apt
