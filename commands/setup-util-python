#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# python2
setup-util "$@" CLI='python' \
	APK='python' \
	APT='python' \
	BREW='python' \
	PACMAN='python' \
	YUM='python'

# python3
setup-util "$@" CLI='python3' \
	APK='python3' \
	APT='python3' \
	BREW='python3' \
	PACMAN='python3' \
	YUM='python3'

# pipx dependencies for linux, not macos
if is-linux; then
	setup-util "$@" --optional NAME='python3-venv' \
		APT='python3-venv' \
		PACMAN='python-virtualenv'
fi
