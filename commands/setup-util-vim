#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# https://en.wikipedia.org/wiki/Vim_(text_editor)

# @todo figure out installers for other platforms
env NAME='Vim (Vi IMproved)' cli='vim' \
	APT='vim' \
	BREW='vim' \
	setup-util

if test ! -f "$HOME/.vimrc"; then
	cat <<-EOF
		Vim configuration missing, applying the fancy defaults from:
		$(echo-style --dim='https://github.com/amix/vimrc')
	EOF
	eval-collapse \
		--success="$(echo-style --green='Successfully applied the Vim configuration.')" \
		-- github-file-download 'amix/vimrc/master/vimrcs/basic.vim' --destination="$HOME/.vimrc"
fi
