#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function fs-join() (
	if [[ $1 == *'/' ]]; then
		if [[ $2 == '/'* ]]; then
			echo "${1}${2/\//}"
		else
			echo "${1}${2}"
		fi
	else
		if [[ $2 == '/'* ]]; then
			echo "${1}${2}"
		else
			echo "${1}/${2}"
		fi
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	fs-join "$@"
fi
