#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function setup-linux-clean() (
	# =====================================
	# Checks

	# check that an accident has not occured
	if ! is-linux; then
		echo-style --notice="[$0] is only intended to be run on Linux systems, skipping." >/dev/stderr
		return
	fi

	# =====================================
	# Action

	echo-segment --h1='Clean Linux'

	if is-apt; then
		echo-segment --h2='Clean APT'
		sudo apt-get autoremove -y --purge
		sudo apt-get autoclean -y
		sudo apt-get clean -y
		echo-segment --g2='Clean APT'
	fi

	echo-segment --g1='Clean Linux'
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup-linux-clean "$@"
fi
