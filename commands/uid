#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# =====================================
# Arguments

# help
function help() {
	cat <<-EOF >/dev/stderr
		ABOUT:
		Get the user identifier for a username.

		USAGE:
		uid [username]
		uid [--username=...]
		uid [--user=...]

		QUIRKS:
		If no username is provided, the active user will be used.
	EOF
	if test "$#" -ne 0; then
		echo-style $'\n' --error="ERROR:" $'\n' --red="$(echo-lines -- "$@")" >/dev/stderr
	fi
	return 22 # Invalid argument
}

# process
option_username=''
while test "$#" -ne 0; do
	item="$1"
	shift
	case "$item" in
	'--username='*) option_username="${item:11}" ;;
	'--user='*) option_username="${item:7}" ;;
	'--'*) help "An unrecognised flag was provided: $item" ;;
	*)
		if test -z "$option_username"; then
			option_username="$item"
		else
			help "An unrecognised argument was provided: $item"
		fi
		;;
	esac
done

# fallback username to current user
if test -z "${option_username}"; then
	option_username="$(whoami)"
fi

# =====================================
# Act

id -u "$option_username"
