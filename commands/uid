#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# =====================================
# Arguments

# help
function help() {
	cat <<-EOF >/dev/stderr
		ABOUT:
		Get the user identifier for a username.

		USAGE:
		uid [username]
		uid [--username=...]
	EOF
	if test "$#" -ne 0; then
		echo-style $'\n' --error="ERROR:" $'\n' --red="$(echo-lines -- "$@")" >/dev/stderr
	fi
	return 22 # Invalid argument
}

# process
option_username="$(whoami)"
while test "$#" -ne 0; do
	item="$1"
	shift
	case "$item" in
	'--username='*) option_username="${item:11}" ;;
	'--'*) help "An unrecognised flag was provided: $item" ;;
	*)
		if test -z "$item"; then
			help "Empty username provided."
		elif test -z "$option_username"; then
			option_username="$item"
		else
			help "Extra argument provided."
		fi
		;;
	esac
done

# =====================================
# Act

id -u "$option_username"
