#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function get-url-protocol() (
	# dependencies
	setup-util-sd --quiet

	# act
	local result
	# trunk-ignore(shellcheck/SC2016)
	result="$(echo "$1" | sd '^([a-z]+)://.*$' '$1')"
	if test "$result" = "$1"; then
		return 1
	else
		echo "$result"
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	get-url-protocol "$@"
fi
