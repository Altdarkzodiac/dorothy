#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# help
if is-help "$@"; then
	cat <<-EOF >/dev/stderr
		ABOUT:
		??????
	EOF
	return 22 # Invalid argument
fi

format="${1:-"+%Y-%m-%d"}"

if is-mac; then
	date -v +1y "$format"
else
	# get the current date, but one year in the future, and work on linux
	year="$(date "+%Y")"
	year="$((year + 1))"
	# macos: date -jf "%Y-%m-%d" "$year-$(date "+%m-%d")" "$format"
	date --date="$year-$(date "+%m-%d")" "$format"
fi
