#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function echo-before-blank() (
	local append=''
	if [[ $1 == '--append='* ]]; then
		append="${1:9}"
		shift
	fi

	# https://stackoverflow.com/a/1603436/130638
	sed -e '/^$/,$d' "$@"

	if test -n "$append"; then
		echo -n "$append"
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo-before-blank "$@"
fi
