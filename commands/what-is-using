#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# help
function help() {
	cat <<-EOF >/dev/stderr
	    ???????
	EOF
	if test "$#" -ne 0; then
		echo-style $'\n' --error="ERROR:" $'\n' --red="$(echo-lines -- "$@")" >/dev/stderr
	fi
	return 22 # Invalid argument
}

# process
while test "$#" -ne 0; do
	item="$1"
	shift
	case "$item" in
	'--help' | '-h') help ;;
	'--'*) help "An unrecognised flag was provided: $item" ;;
	*)
        p="${item:-"$(
	        choose-option --required \
		        --question='Which path to identify users of?' \
		        -- /Volumes/*
        )"}"
		;;
	esac
done

# act
sudo lsof "$p"
