#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# help
if is-help "$@"; then
	stderr cat <<-EOF
		USAGE:
		get-profile <what> -- <from...>

		WHAT:
		name
		email
		url
		username

		FROM:
		git
		npm
		os
	EOF
	exit 22 # Invalid argument
fi

# args
what=''
from=()
sources=(
	git
	npm
)
while test "$#" -ne 0; do
	item="$1"
	shift
	case "$item" in
	'--what='*)
		what="$(
			get-flag-value what -- "$item"
		)"
		;;
	'--from='*)
		mapfile -t from < <(echo-split ',' -- "$(get-flag-value from -- "$item")")
		;;
	'...')
		from+=("${sources[@]}")
		;;
	'--') continue ;;
	*)
		if test -z "$what"; then
			what="$item"
		else
			from+=("$item")
		fi
		;;
	esac
done
if test "${#from[@]}" -eq 0; then
	from=("${sources[@]}")
fi

# act
for __from in "${from[@]}"; do
	result=''
	case "$__from" in
	'git')
		case "$what" in
		'name' | 'email')
			result="$(
				git config --global "user.${what}"
			)"
			;;
		'username')
			result="$(
				git config --global 'github.user' || git config --global 'gitlab.user'
			)"
			;;
		esac
		;;
	'npm')
		case "$what" in
		'name' | 'email' | 'url')
			result="$(
				npm config get "init.author.${what}"
			)"
			;;
		esac
		;;
	'os')
		case "$what" in
		'name')
			result="$(
				id -F
			)"
			;;
		'username')
			result="$(
				whoami
			)"
			;;
		esac
		;;
	esac
	if test -n "$result"; then
		echo "$result"
		exit 0
	fi
done
