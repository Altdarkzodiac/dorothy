#!/usr/bin/env bash

# https://github.com/httpie/httpie

function setup-util-httpie() (
	source "$DOROTHY/sources/strict.bash"

	# no apk
	setup-util "$@" --name='HTTPie' --cli='http' \
		APT='httpie' \
		AUR='httpie' \
		BREW='httpie' \
		EMERGE='httpie' \
		EOPKG='httpie' \
		PIP='httpie' \
		PORT='httpie' \
		RPM='httpie' \
		ZYPPER='httpie'
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup-util-httpie "$@"
fi
