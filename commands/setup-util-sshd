#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function setup-util-sshd() (
	setup-util "$@" --name='OpenSSH Server' --cli='sshd' \
		APT='openssh-server' \
		BREW='openssh' \
		ZYPPER='openssh'

	# ubuntu, opensuse
	if command-exists systemctl; then
		eval-helper -- sudo systemctl enable sshd
	fi

	# opensuse
	if command-exists firewall-cmd; then
		eval-helper -- sudo firewall-cmd --permanent --add-service=ssh
		eval-helper -- sudo firewall-cmd --reload
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup-util-sshd "$@"
fi
