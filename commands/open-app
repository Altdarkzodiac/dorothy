#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# =====================================
# Arguments

# help
function help() {
	cat <<-EOF >/dev/stderr
		ABOUT:
		Open the specified GUI application.

		QUIRKS:
		Uses [get-app] to determine the application path to open.

		USAGE:
		open-app <app path or name> [... anything to forward to the app]
	EOF
	if test "$#" -ne 0; then
		echo-style $'\n' --error="ERROR:" $'\n' --red="$(echo-lines -- "$@")" >/dev/stderr
	fi
	return 22 # Invalid argument
}

# process
option_name=''
option_args=()
while test "$#" -ne 0; do
	item="$1"
	shift
	case "$item" in
	'help' | '--help' | '-h') help ;;
	'--name='*) option_name="${item:7}" ;;
	'--no-quiet'* | '--quiet'* | '--no-verbose'* | '--verbose'*)
		option_quiet="$(
			echo-quiet --missing="$option_quiet" -- "$item"
		)"
		;;
	'--')
		option_args+=("$@")
		shift "$#"
		break
		;;
	'--'*) help "An unrecognised flag was provided: $item" ;;
	*)
		if test -z "$option_name"; then
			option_name="$item"
		else
			help "An unrecognised argument was provided: $item"
		fi
		;;
	esac
done

# =====================================
# Act

# act
app="$(get-app "$option_name")"
if test -n "$app"; then
	open -a "$app" "${option_args[@]}"
else
	echo-style --error="Unable to find the application: $option_name" >/dev/stderr
	exit 2 # ENOENT 2 No such file or directory
fi
