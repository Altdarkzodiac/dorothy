#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# https://github.com/sharkdp/hyperfine
# benchmarking

function setup-util-hyperfine() (
	setup-util "$@" CLI='hyperfine' \
		APK='hyperfine' \
		BREW='hyperfine' \
		CARGO='hyperfine' \
		CONDA_CHANNEL='conda-forge' \
		CONDA='hyperfine' \
		DNF='hyperfine' \
		DOAS='hyperfine' \
		NIX='hyperfine' \
		PACMAN='hyperfine' \
		PKG='hyperfine' \
		PORT='hyperfine' \
		XBPS='hyperfine'
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup-util-hyperfine "$@"
fi
