#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

if is-mac; then
	env NAME='GNU sed' CLI='gsed' \
		BREW='gnu-sed' \
		setup-util
	alias sed=gsed
elif command-missing gsed; then
	# this may be included quite early, in which case, ensure it exists
	XDG_BIN_HOME="${XDG_DATA_HOME:-"$HOME/.local/bin"}"
	# make the symlink, using our reliable helper
	ln-helper "$XDG_BIN_HOME/gsed" "$(which sed)"
fi
