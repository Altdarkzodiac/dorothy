#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function setup-update() (
	# pre-requisites
	is-internet-working

	# perform the update
	if is-mac; then
		setup-mac update
	elif is-linux; then
		setup-linux update
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup-update "$@"
fi
