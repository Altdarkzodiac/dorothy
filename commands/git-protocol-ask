#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# =====================================
# Configuration

source "$DOROTHY/sources/config.bash"

# git.bash provides:
GIT_PROTOCOL=''
load_dorothy_config 'git.bash'

# options
preference="${1:-"$GIT_PROTOCOL"}"

# =====================================
# Action

if test "$preference" = 'https'; then
	# skip checks if https
	echo 'https'
	exit 0
fi

choices=()
if ssh-ok; then
	choices+=('ssh')
fi
choices+=('https')

choose-option --question='Which git protocol do you wish to use?' --filter="$preference" -- "${choices[@]}"
