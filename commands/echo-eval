#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# same as simple eval-collapse
function echo_eval() {
	# remove superflous --
	if test "$1" = '--'; then
		shift
	fi
	# echo and run
	echo-element --open="$*"
	ec=0 && ("$@") || ec="$?"
	echo-element --close="$*" --status="$ec"
	return "$ec"
}

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo_eval "$@"
fi
