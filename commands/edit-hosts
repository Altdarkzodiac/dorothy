#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function edit-hosts() (
	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Edit the system's HOSTS file.

			USAGE:
			edit-hosts
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # Invalid argument
	}

	# process
	local item
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) help "An unrecognised argument was provided: $item" ;;
		esac
	done

	# =====================================
	# Action

	edit --sudo -- /etc/hosts
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	edit-hosts "$@"
fi
