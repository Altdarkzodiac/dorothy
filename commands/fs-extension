#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function fs-bytes() (
	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Get the extension of a basename.

			USAGE:
			fs-extension <path>

			EXAMPLE:
			fs-extension .dorothy/a.b.c
			    c

		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # Invalid argument
	}

	# process
	local item path=''
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*)
			if test -z "$path"; then
				path="$item"
			else
				help "An unrecognised argument was provided: $item"
			fi
			;;
		esac
	done

	# =====================================
	# Action

	# fs-extension .dorothy/a.b.c => c
	echo "${path##*.}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	fs-bytes "$@"
fi
