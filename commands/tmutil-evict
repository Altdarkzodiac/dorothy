#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# =====================================
# Arguments

# help
function help() {
	cat <<-EOF >/dev/stderr
		ABOUT:
		Evict the macOS Time Machine cache, which may interfere with iCloud Syncing if it became too large.

		USAGE:
		tmutil-evict
	EOF
	if test "$#" -ne 0; then
		echo-style $'\n' --error="ERROR:" $'\n' --red="$(echo-lines -- "$@")" >/dev/stderr
	fi
	return 22 # Invalid argument
}

# process
while test "$#" -ne 0; do
	item="$1"
	shift
	case "$item" in
	'help' | '--help' | '-h') help ;;
	'--'*) help "An unrecognised flag was provided: $item" ;;
	*) help "An unrecognised argument was provided: $item" ;;
	esac
done

# check
if ! is-mac; then
	help "This command is only purposeful on macOS, which you are not running."
fi

# =====================================
# Action

while read -r snapshot; do
	sudo tmutil deletelocalsnapshots "$snapshot"
done < <(tmutil listlocalsnapshotdates | grep '-')
