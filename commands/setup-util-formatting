# https://github.com/mvdan/sh#shfmt
env CLI='shfmt' \
	ALPINE='shfmt' \
	ARCH='shfmt' \
	BREW='shfmt' \
	CURL='https://webinstall.dev/shfmt' \
	DEBIAN='shfmt' \
	GO='mvdan.cc/sh/v3/cmd/shfmt' \
	NIX='shfmt' \
	PKG='shfmt' \
	PORT='shfmt' \
	SCOOP='shfmt' \
	SNAP='shfmt' \
	VOID='shfmt' \
	setup-util

# https://github.com/koalaman/shellcheck#installing
env CLI='shellcheck' \
	CABAL='ShellCheck' \
	STACK='ShellCheck' \
	APT='shellcheck' \
	PACMAN='shellcheck' \
	EMERGE='shellcheck' \
	DNF='ShellCheck' \
	PKG='hs-ShellCheck' \
	BREW='shellcheck' \
	PORT='shellcheck' \
	PKG_ADD='shellcheck' \
	ZYPPER='ShellCheck' \
	EOPKG='shellcheck' \
	CHOCO='shellcheck' \
	SCOOP='shellcheck' \
	CONDA_CHANNEL='conda-forge' \
	CONDA='shellcheck' \
	SNAP_CHANNEL='edge' \
	SNAP='shellcheck' \
	NIX='nixpkgs.shellcheck' \
	setup-util

# https://prettier.io/docs/en/install.html
env NAME='Prettier' CLI='prettier' OPTIONAL=yes \
	NPM='prettier' \
	YARN='prettier' \
	setup-util
