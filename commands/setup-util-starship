#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# https://starship.rs
# cross-shell prompt

# https://starship.rs/guide/#ðŸš€-installation

function setup-util-starship() (
	setup-util "$@" NAME='Starship' CLI='starship' \
		BREW='starship' \
		SCOOP='starship' \
		INSTALLER='https://starship.rs/install.sh'

	echo 'If you see unknown icons while using Starship, then you need to run:'
	if is-mac; then
		echo '	brew install --cask font-fira-code-nerd-font'
	else
		echo '	setup-linux-fonts'
	fi
	echo 'then set your terminal to use the Fira Code Nerd font, or another monospace nerd font that was installed.'
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup-util-starship "$@"
fi
