#!/usr/bin/env bash
# thanks to http://unix.stackexchange.com/a/358209/50703 for the help on this one
source "$DOROTHY/sources/strict.bash"

# dependencies
env QUIET=yes setup-util-screen

function together() (
	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Run and show multiple commands at the same time.

			USAGE:
			together <...comands>

			EXAMPLE:
			together 'waiter 5' 'waiter 10'
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # Invalid argument
	}

	# process
	local item commands=()
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		--)
			commands+=("$@")
			shift $#
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) commands+=("$item") ;;
		esac
	done

	# check
	if test "${#commands[@]}" -eq 0; then
		help "No commands were provided"
	fi

	# =====================================
	# Act

	local id config cmd
	config="$(fs-temp --directory='together' --file)"
	id="$(basename "$config")"
	echo "screen ${commands[0]}" >>"$config"
	for cmd in "${commands[@]:1}"; do
		{
			echo 'split'
			echo 'focus'
			echo "screen $cmd"
		} >>"$config"
	done
	screen -AS "$id" -c "$config"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	together "$@"
fi
