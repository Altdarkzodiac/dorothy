#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function echo-escape-special() (
	# dependencies
	setup-util-sd --quiet

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			For each input, decode it's URL entities.

			USAGE:
			echo-escape-special <...input>
			echo-lines <...input> | echo-escape-special

			EXAMPLE:

			echo-escape-special "\$(echo-style --green=sup)"

			    \[32msup\[39m
			    # exit status: 0

			echo-style --green=sup | echo-escape-special

			    \[32msup\[39m
			    # exit status: 0

		EOF
		return 22 # Invalid argument
	}

	function on_input {
		# shellcheck disable=SC2016
		sd '([^\w\d\n +-.])' '\\$1' <<<"$1"
	}

	source "$DOROTHY/sources/stdinargs.bash"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo-escape-special "$@"
fi
