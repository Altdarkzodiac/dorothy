#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# sudo a command inheriting environment and path
# https://stackoverflow.com/q/257616/130638

# help
if is-help-empty "$@"; then
	cat <<-EOF >/dev/stderr
		ABOUT:
		    Inherit dorothy user configs in sudo so that you can keep your configs...
	EOF
	exit 22 # Invalid argument
fi

while test "$1" = '--'; do
	shift
done

sudo -EH env PATH="$PATH" "$@"
