#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# sudo a command inheriting environment and path
# https://stackoverflow.com/q/257616/130638

function sudo-inherit() (
	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Run a command as sudo, inheriting environment variables, including PATH.

			USAGE:
			sudo-inherit -- <command...>
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # Invalid argument
	}

	# process
	local item cmd=()
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--')
			cmd+=("$@")
			shift "$#"
			break
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) help "An unrecognised argument was provided: $item" ;;
		esac
	done

	# check
	if test "${#cmd[@]}" -eq 0; then
		echo-style --error="No <command> was provided. See [$0 --help] for usage."
		return 22 # EINVAL 22 Invalid argument
	fi

	# =====================================
	# Action

	#   -E, --preserve-env            preserve user environment when running command
	#   -H, --set-home                set HOME variable to target user's home dir

	sudo -EH env PATH="$PATH" "${cmd[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	sudo-inherit "$@"
fi
