#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function setup-util-yum() (
	# =====================================
	# Checks

	# check that an accident has not occured
	if ! is-yum; then
		echo-style --notice="[$0] is for Linux systems with [yum] installed, skipping." >/dev/stderr
		return 0
	fi

	# =====================================
	# Action

	sudo yum upgrade -y
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup-util-yum "$@"
fi
