#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# checks if the first argument exists in the subsequent arguments

function is-needle() (
	local item

	for item in "${@:2}"; do
		if test "$item" = "$1"; then
			return
		fi
	done

	return 1
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	is-needle "$@"
fi
