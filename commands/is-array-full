#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# is the array full / complete?

# failure if any value is empty
# pass if all values are truthy

function is-array-full() (
	local arg

	if test "$#" -eq 0; then
		return 1
	fi

	for arg in "$@"; do
		if test -z "$arg"; then
			return 1
		fi
	done

	return
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	is-array-full "$@"
fi
