#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# help
if is-help "$@"; then
	cat <<-EOF >/dev/stderr
		ABOUT:
		??????
	EOF
	# if test "$#" -ne 0; then
	# 	echo-style $'\n' --error="ERROR:" $'\n' --red="$(echo-lines -- "$@")" >/dev/stderr
	# fi
	return 22 # Invalid argument
fi

result="$(ffprobe -i "$1" |& grep 'Audio: ')"

if test "$2" = "trim"; then
	echo "$result" | sed 's/.*Audio: //; s/\ .*//'
else
	echo "$result"
fi
