#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"
source "$DOROTHY/sources/ripgrep.bash"

# =====================================
# Arguments

# prepare
actions=(
	count
	verify
)

# help
function help() {
	cat <<-EOF >/dev/stderr
		ABOUT:

		Wrappers around btrfs to make things easier.


		USAGE:

		btrfs-helper <action> -- [...args]


		ACTIONS:

		count -- <label>
			Count the drives of a btrfs filesystem label.

		verify -- <label> <expected-count>
			Verify the amount of btrfs devices for a btrfs filesystem label matches what we expected.
	EOF
	if test "$#" -ne 0; then
		echo-style $'\n' --error="ERROR:" $'\n' --red="$(echo-lines -- "$@")" >/dev/stderr
	fi
	return 22 # Invalid argument
}

# process
action=''
action_args=()
while test "$#" -ne 0; do
	item="$1"
	shift
	case "$item" in
	'--help' | '-h') help ;;
	'--action='*) action="${item:9}" ;;
	'--')
		action_args+=("$@")
		shift $#
		break
		;;
	'--'*) help "An unrecognised flag was provided: $item" ;;
	*)
		if test -z "$action"; then
			action="$item"
		else
			help "An unrecognised argument was provided: $item"
		fi
		;;
	esac
done

# ensure action
action="$(
	choose-option --required \
		--question='What action to perform?' \
		--filter="$action" -- "${actions[@]}"
)"

# =====================================
# Actions

function act_count {
	# Get the amount of btrfs devices for the specified label
	local label="$1"
	sudo btrfs filesystem show "$label" | rg -o 'Total devices ([0-9]+)' --replace '$1'
}
function act_verify {
	# Verify the amount of btrfs devices matches what we expected
	local label="$1" expected="$2" actual
	actual="$(get_btrfs_drives_count "$label")"
	if test "$actual" -ne "$expected"; then
		cat <<-EOF >/dev/stderr
			$(echo-style --error="$actual out of $expected drives available")
			$(echo-style --notice="Try again when all drives are available.")
		EOF
		return 1
	fi
}

# =====================================
# Act

if test "$(type -t "act_$action")" = 'function'; then
	"act_$action" "${action_args[@]}"
	exit "$?"
else
	echo-style --error="Action [$action] not yet implemented." >/dev/stderr
	exit 78 # Function not implemented
fi
