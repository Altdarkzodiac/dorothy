#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

echo-segment --h2='Setup Vim'

if confirm-negative --ppid=$$ -- "Replace Vim config with fancy defaults?" "$(echo-style --dim 'Uses: https://github.com/amix/vimrc')"; then
	if eval-collapse -- github-file-download 'amix/vimrc/master/vimrcs/basic.vim' \
		--destination="$HOME/.vimrc"; then
		echo-style --green "Successfully updated the Vim configuraiton."
	fi
fi

echo-segment --g2='Setup Vim'
