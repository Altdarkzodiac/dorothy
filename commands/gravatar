#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function gravatar() (
	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Get the URL of the email's gravatar.

			USAGE:
			gravatar [...options] [<email>]

			OPTIONS:
			--open
			    Open the gravatar in your web browser.
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # Invalid argument
	}

	# process
	local item email='' open='no'
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--no-open'* | '--open'*)
			open="$(get-flag-value open --missing="$open" -- "$item" | echo-affirmative)"
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*)
			if test -z "$email"; then
				email="$item"
			else
				help "An unrecognised argument was provided: $item"
			fi
			;;
		esac
	done

	# ensure
	email="$(
		ask --required \
			--question="Enter the email to get the Gravatar for" \
			--default="$email"
	)"

	# =====================================
	# Act

	local hash url
	hash="$(md5 -qs "$email")"
	url="https://www.gravatar.com/avatar/${hash}?s=2048"
	echo "$url"
	if test "$open" = 'yes'; then
		open "$url"
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	gravatar "$@"
fi
