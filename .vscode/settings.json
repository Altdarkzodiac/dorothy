{
  "workbench.colorTheme": "Atom One Light",
  "workbench.iconTheme": "material-icon-theme",
  // "editor.fontWeight": "400",
  "editor.fontFamily": "Monoid-Retina, Monoid, Hasklig, Source Code Pro, Monaco, Fira Code, Fira Mono, PT Mono, Andale Mono, Menlo",
  // "editor.lineHeight": 25,
  "editor.fontSize": 12,
  // "terminal.integrated.fontSize": 9,
  "editor.tabSize": 3,
  "editor.wordWrap": "on",
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": true,
  "extensions.autoUpdate": true,
  "editor.detectIndentation": true,
  "zenMode.fullScreen": false,
  "zenMode.hideTabs": false,
  "zenMode.restore": true,
  "zenMode.hideStatusBar": false,
  "editor.cursorStyle": "line-thin",
  "editor.roundedSelection": true,
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "solid",
  "workbench.welcome.enabled": false,
  "eslint.run": "onType",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "workbench.editor.tabCloseButton": "left",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/yarn.lock": true,
    "**/.vscode": true
  },
  "eslint.autoFixOnSave": true,
  "editor.renderIndentGuides": true,
  "files.trimTrailingWhitespace": true,
  "editor.folding": false,
  "git.confirmSync": false
  /*
  "guides.stack.enabled": false,
  "guides.active.color.light": "rgba(0, 0, 0, 0.15)",
  "guides.updateDelay": 0.05,
  "guides.active.enabled": false
  */
}