#!/usr/bin/env bash

set -e
if is_dir "$HOME/.nvm"; then
   echo "updating nvm..."
   cd "$HOME/.nvm"
   git checkout master
   git pull origin master
   cd "$HOME"
else
   echo "installing nvm..."
   git clone git://github.com/creationix/nvm.git "$HOME/.nvm"
   source "$HOME/.scripts/sources/nvm.bash"
fi