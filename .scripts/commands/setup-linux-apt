#!/usr/bin/env bash
set -e

# apt update
sudo apt-get update -y
sudo apt-get upgrade -y

# apt remove
sudo apt-get remove -y --purge \
	aisleriot \
	gnome-mahjongg \
	gnome-mines \
	gnome-sudoku \
	gnomine \
	imagemagick \
	libreoffice* \
	rhythmbox \
	shotwell \
	thunderbird \
	;

# apt install
sudo apt-get install -y \
	build-essential \
	curl \
	fish \
	git \
	httpie \
	libssl-dev \
	openssl \
	python \
	ruby \
	software-properties-common \
	vim \
	;

# apt clean
sudo apt-get clean -y
sudo apt-get autoremove -y

# snap update
sudo snap refresh