#!/usr/bin/env bash

set -e

# apt update
sudo apt-get update -y && sudo apt-get upgrade -y

# apt remove
sudo apt-get remove -y --purge libreoffice* rhythmbox thunderbird shotwell gnome-mahjongg gnomine gnome-sudoku gnome-mines aisleriot imagemagick && aptclean

# apt install
sudo apt-get install -y build-essential curl git httpie fish libssl-dev openssl python ruby software-properties-common vim

# apt clean
sudo apt-get clean -y && sudo apt-get autoremove -y
