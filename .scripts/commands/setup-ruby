#!/usr/bin/env bash
set -e

if ! command_exists gem; then
	echo -e "\nRuby (gem) does not seem to be installed..."
	exit
fi

echo -e "\nInstalling ruby gems..."
gem install compass
gem install git-up
gem install sass
gem install terminal-notifier
gem install travis
# must be done separately as otherwise failures can occur
# OpenShift Client Tools: rhc