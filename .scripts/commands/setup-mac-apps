#!/usr/bin/env bash

mas signout

read -t 60 -p "What is your Apple Store email? " answer
if is_string "$answer"; then
   echo "logging you out and then in to the CLI app..."
   mas signout
   mas signin --dialog apple@bevry.me

   echo "installing mac app store apps..."
   set -e
   mas install 937984704     # Amphetamine
   mas install 1121192229    # Better.fyi
   mas install 430798174     # HazeOver
   mas install 441258766     # Magnet
   mas install 1124077199    # Paws for Trello
   mas install 803453959     # Slack
   mas install 931134707     # Wire
   mas install 497799835     # XCode

   echo "accepting the xcode license..."
   sudo xcodebuild -license  # XCode license

else
   echo "skipped mac app store apps install"
fi