#!/usr/bin/env bash
set -e

function convert {
	local input="$1"
	local output="${1%.*}-h265.mp4"
	echo "converting $input to $output"
	ffmpeg -i "$input" -c:v libx265 -c:a libfdk_aac "$output" < /dev/null && echo "converted $input to $output" || echo "conversion of $input to $output FAILED"
}

